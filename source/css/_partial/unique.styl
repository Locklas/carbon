//container
#container
  margin auto
  width 60%
  min-width 18rem

#banner
  overflow auto
  #site-title
  #site-subtitle
    display inline-block
    vertical-align middle
  #site-title
    font-size 3rem
    font-weight lighter
    margin-right 1.5rem
  #site-subtitle
    padding-left 1.5rem
    /*border-left thin solid dimgray*/
    font-size small

#content
  text-autospace ideograph-alpha
  .meta
    .article-title
      font-weight lighter
      margin-bottom 0
    .article-date
      color darkgray

  //index
  .abstract-list
  .excerpt
    padding 0

  .article-content
    h2
      font-weight lighter
      font-size 1.3rem
    h3
      font-weight lighter
      font-size 1.15rem
    a
      padding-left 0.3rem
      padding-right 0.3rem
      &:link
        color dimgray
      &:hover
        color link-color
      img
        margin-left -0.3rem
    p
      font-weight normal

  figure.highlight
    margin-right 0
    margin-left 0

  #left-navigator
    float left

  #right-navigator
    float right

//footer
#footer
  list-style-type none
  padding-top 3rem
  float right
  ul
    list-style-type none
    float right
  li
    float left
    margin-left 1rem
  a
    display inline-block
  .zh
    word-break-cjk break-word
    width 1rem
    letter-spacing 1rem
